<div class="pages page-4-<%="#{@story.place.name}"%>">

  <div>
    <% if @story.place.name == "Mountain" %>
      <canvas id="canvas-snow"></canvas>
    <% elsif @story.place.name == "Forest" %>
      <canvas id="canvas-rain"></canvas>
    <% end %>
  </div>

  <div class="page-char-stickers">
    <%= image_tag "#{@story.character.photo}", class: "#{@story.character.typ.downcase}-char-page4" %>
    <%= image_tag "#{@character2.photo}", class: "#{@character2.typ.downcase}-char-page4" %>
      <%= image_tag "#{@story.item.photo}", class: "#{@story.item.typ.downcase}-item-page4" %>
  </div>

</div>

<div class="page-text">
  <p class="text"><%= @story_adv2 %></p>

  <p class="next"><%= link_to "Next", page5_story_path(@story, character2: @character2), class:"btn btn-danger" %></p>

  <p class="previous"><%= link_to "Previous", page3_story_path(@story, character2: @character2), class:"btn btn-danger" %></p>
</div>
