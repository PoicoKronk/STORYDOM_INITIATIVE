<% if @story.place.includes("Mountain") %>
  <div class="page-1"><%= PLACES.sample %>
<% else %>
  <div class="page-7">
<% end %>

  <div class="page-char-stickers">
    <%= image_tag "#{@story.character.photo}", class: "#{@story.character.typ.downcase}-char" %>
    <%= image_tag "#{@character2.photo}", class: "#{@story.character.typ.downcase}-char" %>
  </div>
</div>

<div class="page-text">
  <p class="text"><%= @story_init %></p>
